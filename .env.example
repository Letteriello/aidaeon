# Convex Configuration
CONVEX_DEPLOYMENT=your-convex-deployment
CONVEX_URL=https://your-convex-url.convex.cloud
CONVEX_DEPLOY_KEY=your-convex-deploy-key

# N8n Configuration
N8N_USER=admin
N8N_PASSWORD=your-secure-password
N8N_HOST=automation.aidaeon.com
N8N_ENCRYPTION_KEY=your-encryption-key

# PostgreSQL Configuration (for N8n)
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your-postgres-password

# Evolution API Configuration
EVOLUTION_API_URL=https://your-evolution-api-url
EVOLUTION_API_KEY=your-evolution-api-key
EVOLUTION_INSTANCE_NAME=aidaeon-instance

# Clicksign Configuration
CLICKSIGN_ACCESS_TOKEN=your-clicksign-access-token
CLICKSIGN_ENVIRONMENT=sandbox # ou production

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@aidaeon.com

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# Security
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=https://aidaeon.com

# Turborepo
TURBO_TOKEN=your-turbo-token
TURBO_TEAM=your-turbo-team

# Environment
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# SSL Certificates (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_S3_BUCKET=aidaeon-backups
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key
BACKUP_S3_REGION=us-east-1

# Monitoring
UPTIME_KUMA_PASSWORD=your-uptime-kuma-password

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# CORS
CORS_ORIGIN=https://aidaeon.com,https://www.aidaeon.com